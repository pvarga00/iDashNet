@model iDashNet.Models.SonarQubeModel

<!-- Materialize Design Library: http://materializecss.com/ -->
<div class="flex-container" style="margin-top:30px;">
    @foreach (SonarQubeApp app in Model.sonarApps)
    {
        <div class="card-container" style="margin-top:20px;">
        
                <div class="card"  style="background-color:#0C4569">
                    <div class="card-content white-text">
                        <span class="card-title">@app.Name</span>
                        <p>
                            Coverage: @app.Coverage

                        </p>

                        <p>
                            @*Violations: @app.Violations*@
                            Number of Unit Tests: @app.TotNumberUnitTests
                        </p>
                
                        <p>
                            Number of Unit Test Errors: @app.UnitTestErrors
                        </p>
                
                        <p>
                            Unit Test Pass %: @app.UTPassPercent
                        </p>
                
                        <p>
                            Tech Debt (h): @app.TechDebt
                        </p>
                
                        <p>
                            Complexity: @app.Complexity
                        </p>
                
                    </div>
                </div>
            </div>

    }
</div>